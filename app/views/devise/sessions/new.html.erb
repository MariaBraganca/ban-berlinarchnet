<div class="container min-vh-100">
  <div class="row justify-content-center my-5">
    <div class="col-12 col-md-8 px-0" id="login-card">
      <!-- Top image -->
      <div id="top-image">
        <!-- 
        <img alt="logo" src="https://res.cloudinary.com/db5jh0zwo/image/upload/c_scale,w_100/v1/logo/logo1" class="rounded-circle" id="login-logo" />
        -->
      </div>  
      <div id="login-form">
        <h1 class="corporate text-center"><span class="red">·ban</span>login·</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <!-- Email and Password -->
            <div class="row">
              <div class="col-md-12">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
              </div>
            </div>
            <!-- Remember and forgotten Password -->
            <div class="row">
              <div class="col-md-6">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="col-md-6 text-right">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
          </div>
          <!-- Submit -->
          <div class="form-actions">
            <%= f.button :submit, "Log in", :class => "btn btn-call mb-3", :style => "width: 100%;" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  </div>
</div>
