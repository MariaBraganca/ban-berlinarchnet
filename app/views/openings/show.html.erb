<div class="container">
  <div class="row">
		<div class="col-12 mb-3">
			<h1 class="mt-5 mb-3"><strong><%= @opening.job_position %></strong></h1>
			<h3><%= @opening.office.name %></h3>
			<hr>
		</div>
		<div class="col-12 col-lg-9">
			<h3>Job description</h3>
			<p><%= @opening.description %></p>
		</div>
		<div class="col-12 col-lg-3">
			<h3>Details</h3>
			<p><i class="fas fa-clock" style="color: gray"></i> <%= @opening.date.strftime("%d.%m.%Y") %></p>
		</div>
  </div>
</div>