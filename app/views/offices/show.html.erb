<div class= 'banner-show mb-5'>
	<%= cl_image_tag(@office.cl_img_tag, :class => 'banner-show-img') %>
	<h1><%= @office.name %></h1>
</div>

<div class="container">
<!-- SEED TEST CODE -->
	<div class="mb-5">
		<div class="row">
			<!-- About -->
			<div class="col-3">
				<p class="heading-flat">About</p>
			</div>
			<div class="col-9">
				<p><%= @office.description %></p>
			</div>
			<!-- Website -->
			<div class="col-3">
				<p class="heading-flat">Website</p>
			</div>
			<div class="col-9">
				<%= link_to url_for(@office.url), :target => '_blank' do %>
					<%= @office.url %>
				<% end %>
			</div>
			<!-- Ratings -->
			<div class="col-3">
				<p class="heading-flat">Ratings</p>
			</div> 
			<div class="col-9">
				<div class="row">
						<div class="col-2">
							<p>CULTURE</p>
							<p>SALARY</p>
							<p>ARCHITECTURE</p>
						</div>
						<div class="col-2">
							<p> 
								<% @culture_average.times do %> 
									<i class="fas fa-heart" style="color: #e53e3e"></i>
								<% end %>
								<% (5-@culture_average).times do %> 
									<i class="fas fa-heart" style="color: lightgray"></i>
								<% end %>
							</p>
							<p> 
								<% @salary_average.times do %>
									<i class="fas fa-euro-sign" style="color: #90be6d"></i>
								<% end %>
								<% (5-@salary_average).times do %> 
									<i class="fas fa-euro-sign" style="color: lightgray"></i>
								<% end %>
							</p>
							<p> 
								<% @architecture_average.times do %>
									<i class="fas fa-star" style="color: #e9c46a"></i>
								<% end %>
								<% (5-@architecture_average).times do %> 
									<i class="fas fa-star" style="color: lightgray"></i>
								<% end %>
							</p>
						</div>
				</div>
			</div>
			<!-- Projects -->
			<div class="col-3">
				<p class="heading-flat">Projects</p>
			</div>
			<div class="col-9">
			</div>
			<!-- Location -->
			<div class="col-3">
				<p class="heading-flat mb-3">Location</p>
			</div>
			<div class="col-9">
				<p><i class="fas fa-map-marker-alt" style="color: #3fb1ce"></i> <%= @office.location %></p>
				<div id="map"
					style="width: 100%; height: 500px;"
					data-markers="<%= @marker.to_json %>"
					data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
				</div>
			</div>
			<!-- Members -->
			<div class="col-3 mt-3">
				<p class="heading-flat mb-3">Members</p>
			</div>
			<div class="col-9">
				<div class="row mt-3">	
					<% @office.users.each do |user| %>
						<div class="col-3 text-center">
							<%= link_to user_path(user) do %>
								<%= cl_image_tag(user.cl_img_tag, :class => 'avatar-large mb-3') %>
							<% end %>
								<p><%= user.first_name %> <%= user.last_name %></p>
						</div>
					<% end %>
				</div>
			</div>
		</div>		
	</div>
<!-- SEED TEST CODE -->
</div>
