<div class="container min-vh-100">
	<div class="text-center my-5">
		<h1 class="font-weight-bold">Events</h1>
		<p>Check out the lates architecture events in Berlin!</p>
    <%= link_to "Create event", new_event_path, class: "btn btn-attend", style: 'width: 450px; padding: 10px;' if user_signed_in? %>
	</div>
	<div class="row">
		<% @events.each do |event| %>
			<div class="col-12 col-lg-3 mb-5">
				<%= link_to event_path(event) do %>
					<%= render "shared/card-event", event_within: event %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
