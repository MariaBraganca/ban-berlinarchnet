
<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@event.cl_img_tag)%>);">
	<div class="container">
		<h1><%= @event.title%></h1>
		<p>Exchange knowledge</p>

            <% if policy(Rsvp).create? %>
                <button type="button" class="btn btn-call" data-toggle="modal" data-target="#exampleModal">
                    Attend
                </button>
                
            <% end %>
              <%# if policy(Rsvp).destroy?%>
                <%#= form_tag event_rsvp_path(@event), method: :delete do %>
                    <%#= submit_tag "Delete", class: "btn btn-call" %>
                <%# end %>
              <%# end %>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        You are attending the event <%= @event.title%>.
      </div>
      <div class="modal-footer">
        <%= form_tag event_rsvps_path(@event),method: :post do %>
            <%= submit_tag "Close", class: "btn btn-call"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

    <div class = 'container'>
        <h3><%= @event.title %></h3>
    </div>

    <div class = 'container p-3 my-3'>  
        <div class="row">       
            <div class="col-12 col-lg-3">
                <p class="heading-flat">About </p>
            </div>
                <div class = 'col-12 col-lg-9'>
                    <p>Description: <%= @event.description %></p>
                </div>
            </div>
        </div>
    </div>  

    <div class = 'container p-3 my-3'>
        <div class="row">
            <div class="col-12 col-lg-3">
                <p class="heading-flat">Location </p>
            </div>
            <div class = 'col-12 col-lg-9'>
                <p> <%= @event.date_time %></p>
                <p><%= @event.location %></p>
            </div>
        </div>
    </div>


    <div class = 'container p-3 my-3'>
        <div class="row">
        <div class="col-12 col-lg-3">
        </div>
        <div class = 'col-12 col-lg-9'>
            <div id="map"
                style="width: 100%; height: 600px;"
                data-markers="<%= @marker.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
            </div>
        </div>
    </div>
    
    <div class = 'container p-3 my-3'>
        <div class="row">
            <div class="col-12 col-lg-3">
                    <p class="heading-flat mb-3">Attending</p>
                </div>
                    <div class = 'col-12 col-lg-9'>
                        <div class="row mt-3">	
                            <% @event.users.each do |user| %>
                                <div class="col-3 text-center">
                                    <%= link_to user_path(user) do %>
                                        <% if user.photo.attached? %>
                                            <%= cl_image_tag user.photo.key, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                                        <% else %>
                                             <%= cl_image_tag(user.cl_img_tag, :class => 'avatar-large mb-3') %>         
                                        <% end %>
                                    <% end %>
                                        <p><%= user.first_name %> <%= user.last_name %></p>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>    
        </div>
    </div>

      <div class = 'container p-3 my-3'>
        <div class="row">
          <div class="col-12 col-lg-3">
          </div>
             <div class="col-12 col-lg-2">
                 <% if policy(Rsvp).create? %>
                <button type="button" class="btn btn-call" data-toggle="modal" data-target="#exampleModal">
                    Attend
                </button>
                <% end %>
            </div>
        </div>
    </div> 
            
    <div class = 'container p-3 my-3'>
            <div class="row">
                <div class="col-12 col-lg-3">
                    <p class="heading-flat">Organizer </p>
                </div>
                    <div class = 'col-12 col-lg-9'>
                        <%= link_to cl_image_tag(@event.user.cl_img_tag, :class => 'avatar-large mb-3'), user_path(@event.user)  %>
                        <%= @event.user.first_name %>, <%= @event.user.last_name %></p></h1>
                    </div>
            </div>
    </div>


  <div class = 'container p-3 my-3'>
    <div class="row">
            <div class="col-12 col-lg-3">
                <p class="heading-flat">Photos </p>
            </div>
            <div class = 'col-12 col-lg-9'>
                <%= cl_image_tag @event.cl_img_tag, :class => 'photos-events' %>
            </div>
    </div>

  <div class = 'container p-3 my-3'>
        <div class="row">
            <div class="col-12 col-lg-3">
                <p class="heading-flat">Comments </p>
            </div>
            <div class = 'col-12 col-lg-9'>
                <% @event.comments.each do |comment| %>
                 <div class="card-comment" id="comment-<%=comment.id%>">
                      <%= cl_image_tag(comment.user.cl_img_tag, :class => 'avatar-large') %>
                    <div class="card-comment-infos">
                    <p>Time: <%= comment.date %> </p>  
                     <p><%= comment.content %></p> 
                      <p> User: <%= comment.user.first_name %> <%= comment.user.last_name %></p>
                </div>
                </div>
                <% end %>
            </div>
            </div>
        </div>
     </div>
    </div>

        <div class = 'container p-3 my-3'>
        <div class="row">
                <div class = 'col-12 col-lg-3'>
                </div>
                <div class = 'col-12 col-lg-9'>
                    <% if user_signed_in? %>
                        <%= form_tag event_event_comment_path(@event, url: (event_path([@event], anchor:'comments'))), method: :post do |f| %>
                            <%= text_field_tag :content %>          
                            <%= submit_tag 'Submit', class: 'btn btn-call' %>
                        <% end %>
                    <% end %>
                </div>
        </div>
    </div>


    <div class = 'container p-3 my-3'>
        <div class="row">
            <div class = 'col-12 col-lg-3'>
            </div>

            <div class = 'col-12 col-lg-3'>
                <% if policy(@event).edit? %>
                    <%= link_to "Update", edit_event_path(@event), class: 'btn btn-call' %>
                <% end %>
            </div>  
            <div class = 'col-12 col-lg-3'> 
                <% if policy(@event).destroy? %>
                    <%= link_to "Destroy", event_path(@event), class: 'btn btn-call' %>
                <% end %>
            </div> 
        </div> 
  </div>

    <div class = 'container p-3 my-3'>
        <div class="row">
          <div class="col-12 col-lg-3">
          </div>
            <div class="col-12 col-lg-3">
                    <%= link_to 'Back to all events', events_path, class: 'btn btn-call' %>
            </div>          
        </div>
    </div> 
