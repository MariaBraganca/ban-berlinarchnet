<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= cl_image_tag("logo/logo1", :class => 'avatar') %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="navbar navbar-collapse" id="menu">
    <ul class="nav-item active mr-auto">
      <li class="nav-item active">
        <%= link_to "Events", events_path, class: "nav-link-menu" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Offices", offices_path, class: "nav-link-menu" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Jobs", openings_path, class: "nav-link-menu" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Blog", posts_path, class: "nav-link-menu" %>
      </li>
    </ul>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%#= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%#= link_to "Messages", "#", class: "nav-link"%>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "logo/logo1", gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>            
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            
            <%= link_to "Dashboard", user_path(current_user), class: "dropdown-item" %>
            <%#= link_to "Messages", chatroom_path(current_user.chatrooms.last.id), class: "dropdown-item" unless current_user.chatrooms.empty? %>
      
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
