<!-- Attend-Modal -->
<div class="modal fade background-col" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Congratulations!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
      </div>
      <div class="modal-body"> 
           You are attending the amazing event <%= @event.title%>.
            You will meet <b><%= @event.users.length %> great members</b> of the BAN-community. <br>
            See you there!
       <img src="https://media.giphy.com/media/l0MYt5jPR6QX5pnqM/giphy.gif" class = "gif" alt="this slowpoke moves"  width="100%" alt="404 image"/>     
      </div>
      
      <div class="modal-footer">
            <%= form_tag event_rsvps_path(@event), method: :post do |f| %>
                <%= submit_tag "Confirm", class: "btn btn-call btn-green"%>
            <% end %>
            
           <%= link_to "Unattend", event_path(@event), class: "btn btn-call btn-green" %>
           

      </div>
    </div>
  </div>
</div>