<div class="container min-vh-100">
  <div class="row justify-content-center my-5">
    <div class="col-lg-6 form-card px-0">
      <!-- Top image -->
      <div id="login-img">
      </div> 
      <!-- Form details --> 
      <div class="form-infos">
        <h1 class="corporate text-center"><span class="red">·ban</span>login·</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <!-- Email and Password -->
            <div class="row">
              <div class="col-lg-12">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12">
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
              </div>
            </div>
            <!-- Remember and forgotten Password -->
            <div class="row">
              <div class="col-lg-6">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="col-lg-6 text-lg-right mb-3">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
          </div>
          <!-- Submit -->
          <div class="form-actions">
            <%= f.button :submit, "Log in", :class => "btn btn-call mb-3", :style => "width: 100%;" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  </div>
</div>
