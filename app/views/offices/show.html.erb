<div class= 'banner-show mb-5'>
	<%= cl_image_tag(@office.cl_img_tag, :class => 'banner-show-img') %>
	<h1><%= @office.name %></h1>
</div>

<div class="container">
<!-- SEED TEST CODE -->
	<div class="mb-5">
		<div class="row">
			<!-- About -->
			<div class="col-3">
				<p class="heading-flat">About</p>
			</div>
			<div class="col-9">
				<p><%= @office.description %></p>
			</div>
			<!-- Ratings -->
			<div class="col-3">
				<p class="heading-flat">Ratings</p>
			</div>
			<div class="col-9">
				<% @office.ratings.each do |rating| %>
					<p><%= rating.culture %> <i class="fas fa-star"></i></p>
					<p><%= rating.salary %> <i class="fas fa-star"></i></p>
					<p><%= rating.architecture %> <i class="fas fa-star"></i></p>
				<% end %>
			</div>
			<!-- Website -->
			<div class="col-3">
				<p class="heading-flat">Website</p>
			</div>
			<div class="col-9">
				<%= link_to url_for(@office.url), :target => '_blank' do %>
					<%= @office.url %>
				<% end %>
			</div>
			<!-- Location -->
			<div class="col-3">
				<p class="heading-flat mb-3">Location</p>
			</div>
			<div class="col-9">
				<p><%= @office.location %></p>
				<div id="map"
					style="width: 100%; height: 600px;"
					data-markers="<%= @marker.to_json %>"
					data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
				</div>
			</div>
			<!-- Members -->
			<div class="col-3 mt-3">
				<p class="heading-flat mb-3">Members</p>
			</div>
			<div class="col-9">
				<div class="row mt-3">	
					<% @office.users.each do |user| %>
						<div class="col-3 text-center">
							<%= cl_image_tag(user.cl_img_tag, :class => 'avatar-large mb-3') %>
							<p><%= user.first_name %> <%= user.last_name %></p>
						</div>
					<% end %>
				</div>
			</div>

		</div>		
	</div>
<!-- SEED TEST CODE -->
</div>
