<div id="login-card" class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          IMG
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
          <div class="row">
            <div class="col-md-12">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= f.input :password,
                                  required: false,
                                  input_html: { autocomplete: "current-password" } %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
               <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
             </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
                <div class="form-actions">
                  <%= f.button :submit, "Log in", :class => "btn btn-primary mb-3" %>
                </div>
              <% end %>
  <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
