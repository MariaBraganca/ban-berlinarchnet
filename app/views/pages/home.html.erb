<!-- Banner -->
<header>
  <div class="overlay"></div>
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="https://res.cloudinary.com/db5jh0zwo/video/upload/v1599042195/ezgif.com-gif-maker_am5cdf.mp4" type="video/mp4">
  </video>
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-4 font-weight-bold">BAN - Berlin Architectural Network</h1>
        <p class="lead mb-3">Get into Berlin's architecture scene.</p>
				<% unless user_signed_in? %>
					<%= link_to 'Join', new_user_registration_path, :class => "btn btn-call"%>
				<% end %>
      </div>
    </div>
  </div>
</header>

<div class="container">
	<!-- Events -->
	<div class="row my-5">
		<!-- Event Infos -->
		<h2 class="col-12 col-lg-3 font-weight-bold">Events</h2>
		<!-- Event Cards -->
		<div class="col-12 col-lg-9">
			<div class="row justify-content-between">
				<% @events.each do |event| %>
					<div class="col-12 col-lg-4 mb-3">
						<%= link_to event_path(event) do %>
								<%= render "shared/card-event", event_within: event %>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
		<h2 class="col-12 col-lg-3"></h2>
		<div class="col-12 col-lg-9">
			<%= link_to events_path, :class => "custom-btn btn-4 mt-4 text-center font-weight-bold" do %>
				<span>Check out the latest events!</span>
			<% end %>
		</div>
	</div>
	<hr>
	<!-- Offices -->
	<div class="row my-5">
		<!-- Office Infos -->
		<h2 class="col-12 col-lg-3 font-weight-bold">Offices</h2>
		<!-- Office Cards -->
		<div class="col-12 col-lg-9">
			<% @offices.each do |office| %>
				<%= link_to office_path(office) do %>
					<%= render "shared/card-office", office_within: office %>
				<% end %>
			<% end %>
		</div>
		<h2 class="col-12 col-lg-3"></h2>
		<div class="col-12 col-lg-9">
			<%= link_to offices_path, :class => "custom-btn btn-4 mt-4 text-center font-weight-bold" do %>
				<span>Check out the best rated offices!</span>
			<% end %>
		</div>
	</div>
	<hr>
	<!-- Openings -->
	<div class="row my-5">
		<!-- Openings Infos -->
		<h2 class="col-12 col-lg-3 font-weight-bold">Jobs</h2>
		<!-- Openings Cards -->
		<div class="col-12 col-lg-9">
			<ul class="list-group list-group-flush">
				<% @openings.each do |opening| %>
					<li class="list-group-item">
						<%= link_to opening_path(opening) do %>
							<%= render "shared/card-opening", opening_within: opening %>
						<% end %>
					</li>
				<% end %>
			</ul>
		</div>
		<h2 class="col-12 col-lg-3"></h2>
		<div class="col-12 col-lg-9">
			<%= link_to openings_path, :class => "custom-btn btn-4 mt-5 text-center font-weight-bold" do %>
				<span>Check out the latest job openings!</span>
			<% end %>
		</div>
	</div>
	<hr>
	<!-- Blog -->
	<div class="row my-5">
		<h2 class="col-12 col-lg-3 font-weight-bold">Blog</h2>
		<div class="col-12 col-lg-9">
			<ul class="list-group list-group-flush">
				<% @posts.each do |post| %>
					<li class="list-group-item">
						<%= link_to post_path(post) do %>
							<%= render "shared/card-post", post_within: post %>
						<% end %>
					</li>
				<% end %>
			</ul>
		</div>
		<h2 class="col-12 col-lg-3"></h2>
		<div class="col-12 col-lg-9">
			<%= link_to posts_path, :class => "custom-btn btn-4 mt-5 text-center font-weight-bold" do %>
				<span>Check out the latest blog posts!</span>
			<% end %>
		</div>
	</div>


</div>

