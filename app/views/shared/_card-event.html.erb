<article class="card-square">
  <!-- ***************  CARD IMAGE **************** -->
  <%= image_tag(image_path_selector(event_within.cover_photo, event_within.cl_img_tag), class: 'card-square-img') %>
  <!-- ***************  CARD INFOS **************** -->
  <section class="card-infos">
    <header class="d-flex justify-content-between mb-2">
      <h3 class="corporate"><%= event_within.format[0] %><span class="red"><%= event_within.format[1,4] %></span><%= event_within.format[5..-1] %></h3>
      <h3 class="corporate red"><%= event_within.start_date.strftime('%d.%m.%Y') %></h3>
    </header>
    <h2 class="mb-3"><%= event_within.title%></h2>
    <% unless event_within.online %>
      <p><i class="fas fa-map-marker-alt red"></i> <%= event_within.location %></p>
    <% else %>
      <p><i class="fas fa-signal green"></i> Online Event</p>
    <% end %>
  </section>
</article>
