<div class= 'banner-show'>
	<%= cl_image_tag(@office.cl_img_tag, :class => 'banner-show-img mb-5') %>
	<h1><%= @office.name %></h1>
</div>

<div class="container">
<!-- SEED TEST CODE -->
	<div class="mb-5">
		<div class="row">
			<!-- About -->
			<div class="col-3">
				<p class="heading-flat mb-3">About</p>
			</div>
			<div class="col-9">
				<p><%= @office.description %></p>
			</div>
			<!-- Website -->
			<div class="col-3">
				<p class="heading-flat mb-3">Website</p>
			</div>
			<div class="col-9">
				<%= link_to url_for(@office.url), :target => '_blank' do %>
					<%= @office.url %>
				<% end %>
			</div>
			<!-- About -->
			<div class="col-3">
				<p class="heading-flat mb-3">Location</p>
			</div>
			<div class="col-9">
				<p><%= @office.location %></p>
			</div>
			<!-- Members -->
			<div class="col-3">
				<p class="heading-flat mb-3">Members</p>
			</div>
			<div class="col-9">
				<% @office.users.each do |user| %>
					<p><%= user.first_name %></p>
				<% end %>
			</div>
		</div>		
	</div>
<!-- SEED TEST CODE -->
</div>
