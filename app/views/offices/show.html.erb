<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path(@office.cl_img_tag)%>);">
	<div class="container">
		<h1><%= @office.name%></h1>
	</div>
</div>

<div class="container">
<!-- SEED TEST CODE -->
	<div class="mb-5">
		<div class="row">
			<!-- About -->
			<div class="col-3">
				<p class="heading-flat">About</p>
			</div>
			<div class="col-9">
				<p><%= @office.description %></p>
			</div>
			<!-- Website -->
			<div class="col-3">
				<p class="heading-flat">Website</p>
			</div>
			<div class="col-9">
				<%= link_to url_for(@office.url), :target => '_blank' do %>
					<%= @office.url %>
				<% end %>
			</div>
			<!-- Ratings -->
			<div class="col-3">
				<p class="heading-flat">Ratings</p>
			</div> 
			<div class="col-9">
				<div class="row">
						<div class="col-2">
							<p>CULTURE</p>
							<p>SALARY</p>
							<p>ARCHITECTURE</p>
						</div>
						<div class="col-2">
							<p> 
								<% @culture_average.times do %> 
									<i class="fas fa-heart" style="color: #e53e3e"></i>
								<% end %>
								<% (5-@culture_average).times do %> 
									<i class="fas fa-heart" style="color: lightgray"></i>
								<% end %>
							</p>
							<p> 
								<% @salary_average.times do %>
									<i class="fas fa-euro-sign" style="color: #90be6d"></i>
								<% end %>
								<% (5-@salary_average).times do %> 
									<i class="fas fa-euro-sign" style="color: lightgray"></i>
								<% end %>
							</p>
							<p> 
								<% @architecture_average.times do %>
									<i class="fas fa-star" style="color: #e9c46a"></i>
								<% end %>
								<% (5-@architecture_average).times do %> 
									<i class="fas fa-star" style="color: lightgray"></i>
								<% end %>
							</p>
						</div>
				</div>
			</div>
			<!-- Projects -->
			<div class="col-3">
				<p class="heading-flat">Projects</p>
			</div>
			<div class="col-9 mb-3">
				<%= cl_image_tag(@office.cl_img_project_tag, :class => 'photos-events') %>
			</div>
			<!-- Location -->
			<div class="col-3">
				<p class="heading-flat mb-3">Location</p>
			</div>
			<div class="col-9">
				<p><i class="fas fa-map-marker-alt" style="color: #3fb1ce"></i> <%= @office.location %></p>
				<div id="map"
					style="width: 100%; height: 500px;"
					data-markers="<%= @marker.to_json %>"
					data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
				</div>
			</div>
			<!-- Members -->
			<div class="col-3 mt-3">
				<p class="heading-flat mb-3">Members</p>
			</div>
			<div class="col-9">
				<div class="row mt-3">	
					<% @office.users.each do |user| %>
						<div class="col-3 text-center">
							<%= link_to user_path(user) do %>
								<%= cl_image_tag(user.cl_img_tag, :class => 'avatar-large mb-3') %>
							<% end %>
								<p><%= user.first_name %> <%= user.last_name %></p>
						</div>
					<% end %>
				</div>
			</div>
			<!-- Comments -->
			<!-- Past -->
			<div class = 'container p-3 my-3'>
        <div class="row">
					<div class="col-12 col-lg-3">
						<p class="heading-flat">Comments </p>
					</div>
					<div class = 'col-12 col-lg-9'>
						<% @office.comments.each do |comment| %>
							<div class="card-comment">
								<% if comment.user.photo.attached? %>
            			<%= cl_image_tag(comment.user.photo.key, :class => "avatar-large") %>
          			<% else %>
            			<%= cl_image_tag(comment.user.cl_img_tag, :class => 'avatar-large') %>
          			<% end %>									
								<div class="card-comment-infos">
									<p>Time: <%= comment.date %> </p>  
									<p><%= comment.content %></p> 
									<p> User: <%= comment.user.first_name %> <%= comment.user.last_name %></p>
								</div>
							</div>
						<% end %>
					</div>       	
     		</div>
    	</div>
			<!-- New -->
			<div class = 'container p-3 my-3'>
				<div class="row">
					<div class = 'col-12 col-lg-3'>
					</div>
					<div class = 'col-12 col-lg-9'>
						<div class = "form">
							<% if user_signed_in? %>
								<%= form_tag office_office_comment_path(@office, url: (office_path([@office], anchor:'comments'))), method: :post do |f| %>
										<%= text_field_tag :content %>          
										<%= submit_tag 'Submit', class: 'btn btn-call' %>
								<% end %>
							<% end %>
						</div>
					</div>
				</div>
			</div>

		</div>		
	</div>

	<%= link_to 'Back to all offices', offices_path, class: 'btn btn-flat mb-3' %>
<!-- SEED TEST CODE -->
</div>
