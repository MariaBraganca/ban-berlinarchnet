<div class="container min-vh-100">
	<div class="row justify-content-center my-5">
		<!-- Heading -->
		<div class="col-12 col-lg-9 text-center">
			<h1 class="font-weight-bold">Blog</h1>
			<p>Check out the most recent posts about architecture Berlin!</p>
		</div>
		<!-- Create Post -->
		<div class="col-12 col-lg-4">
			<%= link_to "Create post", new_post_path, class: "btn btn-attend" if user_signed_in? %>
		</div>
	</div>
	<!-- Posts -->
	<div class="row justify-content-center">
		<div class="col-12 col-lg-9 px-3">
			<ul class="list-group list-group-flush">
				<% @posts.each do |post| %>
				<li class="list-group-item">
					<%= link_to post_path(post) do %>
							<%= render "shared/card-post", post_within: post %>
						<% end %>
					<% end %>
				</li>
			</ul>
		</div>
	</div>
</div>
