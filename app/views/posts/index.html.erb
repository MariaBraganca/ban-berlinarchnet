<main class="container min-vh-100">
	<!-- ***************  HEADER POSTS  **************** -->
	<header class="row justify-content-center my-5">
		<!-- ***************  INFO  **************** -->
		<section class="col-12 text-center">
			<h1 class="font-weight-bold">Blog</h1>
			<p>Check out the most recent posts about architecture Berlin!</p>
		</section>

		<!-- ***************  CREATE POST **************** -->
		<% if user_signed_in? %>
			<section class="col-lg-6">
				<button class="btn btn-attend w-100"><%= link_to "Create post", new_post_path %></button>
			</section>
		<% end %>
	</header>

	<!-- ***************  POSTS **************** -->
	<section class="row justify-content-center">
		<div class="col-lg-6 px-3">
			<ul class="list-group list-group-flush">
				<% @posts.each do |post| %>
				<li class="list-group-item">
					<%= link_to post_path(post) do %>
							<%= render "shared/card-post", post_within: post %>
						<% end %>
					<% end %>
				</li>
			</ul>
		</div>
	</section>
</main>
