<div class="card-event">
  <%= cl_image_tag(event_within.cl_img_tag, :class => "card-event-img") %>
  <div class="card-event-infos">
    <div>
      <h2><%= event_within.title%></h2>
      <p><i class="fas fa-map-marker-alt" style="color: #3fb1ce"></i> <%= event_within.location %></p>
      <p><i class="fas fa-clock" style="color: gray"></i> <%= event_within.date_time %></p>
    </div>
  </div>
</div>
