<head>
  <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/dark.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdn.jsdelivr.net/npm/places.js@1.19.0"></script>
</head>
<div class="container justify-content-center">
  <div class="row">
    <div class="col-md-8">
      <%= simple_form_for ([@event]) do |f| %>
      <div class="form-inputs justify-content-center">
        <%= f.input :date, as: :string %>
        <%= f.input :start_time, as: :string %>
        <%= f.input :end_time, as: :string %>
        <%= f.input :location, as: :string %>
        <%= f.input :description, as: :text %>
        <%= f.input :title, as: :string  %>
        <%= f.input :venue, as: :string  %>
        <%= f.input :cover_photo, as: :file, required: true, label: false %>
        <%= f.input :event_photos, as: :file, input_html: { multiple: true }%>
        <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <script>
    flatpickr("#event_date", {
      enableTime: true,
      enableTime: false,
      dateFormat: "d.m.Y",
      minDate: "today",
  });
    flatpickr("#event_start_time", {
      enableTime: true,
      noCalendar: true,
      dateFormat: "H:i",
      time_24hr: true,
  });
    flatpickr("#event_end_time", {
      enableTime: true,
      noCalendar: true,
      dateFormat: "H:i",
      time_24hr: true,
  });
      var placesAutocomplete = places({
        appId: 'pl8XQR7LGT3A',
        apiKey: '97cf4ef438588fd18d8ebb1f470b59bb',
        container: document.querySelector('#event_location'),
         templates: {
            value: function(suggestion) {
              return `${suggestion.name}, ${suggestion.postcode}, ${suggestion.city}`;
            }
          }
        }).configure({
          type: 'address'
      });

  </script>
</div>

